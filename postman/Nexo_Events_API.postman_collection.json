{
  "info": {
    "name": "Nexo Events API",
    "description": "Collection para probar la API de creación y gestión de eventos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Crear Evento",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Concierto de Rock\",\n  \"descripcion\": \"Un increíble concierto de rock en vivo con las mejores bandas\",\n  \"lugar\": \"Estadio Municipal\",\n  \"imagenUrl\": \"https://example.com/image.jpg\",\n  \"fecha\": \"25/12/2024\",\n  \"hora\": \"20:00\",\n  \"informacion\": \"Información adicional del evento con todos los detalles\",\n  \"tipo\": \"musical\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        }
      },
      "response": []
    },
    {
      "name": "Crear Evento Inválido",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"A\",\n  \"descripcion\": \"Corto\",\n  \"lugar\": \"X\",\n  \"imagenUrl\": \"invalid-url\",\n  \"fecha\": \"invalid-date\",\n  \"hora\": \"25:00\",\n  \"informacion\": \"Corto\",\n  \"tipo\": \"X\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        }
      },
      "response": []
    },
    {
      "name": "Obtener Todos los Eventos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/events/all",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "all"]
        }
      },
      "response": []
    },
    {
      "name": "Obtener Eventos del Propietario",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/events/owner",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "owner"]
        }
      },
      "response": []
    },
    {
      "name": "Obtener Evento por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/events/event/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "event", "{{eventId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Actualizar Evento",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Concierto de Rock Actualizado\",\n  \"descripcion\": \"Descripción actualizada del concierto\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}"]
        }
      },
      "response": []
    },
    {
      "name": "Eliminar Evento",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events", "{{eventId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "authToken",
      "value": "your-auth-token-here"
    },
    {
      "key": "eventId",
      "value": "your-event-id-here"
    }
  ]
} 